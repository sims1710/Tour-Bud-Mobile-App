<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TouristPages.NearbyTours">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/nearbyToursRecyclerView"
        android:layout_width="374dp"
        android:layout_height="484dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.002" />

    <TextView
        android:id="@+id/tourbuddiesfor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/heavy_futura"
        android:text="Browsing as a"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textWelcome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/heavy_futura"
        android:text="Tourist"
        android:textColor="#712D10"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tourbuddiesfor" />

    <Button
        android:id="@+id/homeBtnTourist"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/quantum_grey800"
        android:fontFamily="@font/heavy_futura"
        android:text="HOME"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textWelcome2"
        app:layout_constraintTop_toBottomOf="@+id/tourbuddiesfor" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/heavy_futura"
        android:text="Near You"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewEnrolledBtn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/viewEnrolledBtn"
        android:layout_width="185dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"

        android:fontFamily="@font/default_futurabk"
        android:outlineAmbientShadowColor="@color/black"
        android:shadowColor="@color/black"
        android:text="Enrolled Tours"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchbtn" />

    <Button
        android:id="@+id/searchbtn"
        android:layout_width="382dp"
        android:layout_height="45dp"

        android:backgroundTint="@color/white"
        android:fontFamily="@font/default_futurabk"
        android:gravity="left|center_vertical"
        android:outlineAmbientShadowColor="@color/black"
        android:shadowColor="@color/black"
        android:text="Search..."
        android:textAllCaps="false"
        android:textColor="@color/quantum_grey"

        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWelcome2" />

    <Button
        android:id="@+id/touristMapBtn"
        android:layout_width="185dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/default_futurabk"
        android:outlineAmbientShadowColor="@color/black"
        android:shadowColor="@color/black"
        android:text="Map View"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewEnrolledBtn"
        app:layout_constraintTop_toBottomOf="@+id/searchbtn"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>